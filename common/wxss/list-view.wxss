

.list-item .item-img {
  width: 100%;
  display: block;
}

.list-item .title-wrap {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 5px 10px;
  background-color: rgba(0, 0, 0, .4);
}

.list-item .item-title {
  color: #fff;
  font-size: 20px;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.collect-item .thumb-wrap {
  width: 130px;
  height: 113px;
  overflow: hidden;
  margin-right: 10px;
}

.collect-item .collect-thumb {
  width: 100%;
  height: 100%;
}

.collect-item .right-content {
  flex: 1;
}

.collect-item .item-title,
.collect-item .collect-date {
  display: block;
  color: #333;
}

.collect-item .item-title {
  font-size: 18px;
}

.collect-item .date {
  font-size: 14px;
  margin-top: 10px;
}

.collect-item .btn-group{
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.collect-item .btn {
  width: 90px;
  height: 30px;
  border: 1rpx solid #979797;
  box-sizing: border-box;
  border-radius: 30px;
  font-size: 18px;
  color: #333;
  text-align: center;
  line-height: 29px;
  background-color: #fff;
}
.collect-item .btn::after {
  border: none;
}

.my-pic-list .video-img {
  position: relative;
  background:#d8d8d8;
  border-radius:13px;
  width:100%;
  height:230px;
}
.video-img .delete-btn {
  display:inline-block;
  position:absolute;
  top:10px;
  right:10px;
  padding:7px 14px;
  font-size:16px;
  line-height:16px;
  border:1px solid #fff;
  color:#fff;
  background:transparent;
  border-radius: 100px;
}
.video-img .operation {
  position: absolute;
  bottom: 0;
  width: 100%;
  max-height: 167px;
}
.video-img .operation .start-end-btn {
  position:relative;
  left:calc(50% - 30px);
  margin-bottom:15px;
  width:60px;
  height:60px;
  opacity:0.4;
  border-radius:100%;
}
.video-img .operation .start-end-btn .control {
  position: relative;
  width: 100%;
  height: 100%;
}
.video-img .describe {
  position: relative;
  bottom: 0;
  padding: 5px 10px 10px;
  width: 100%;
  /* height: 92px; */
  max-height: 92px;
  background: #333;
  opacity:0.4;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  border-radius: 0 0 13px 13px;
}
.video-img .describe .big-desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size:20px;
  color:#fff;
  line-height:28px;
  text-align:left;
  letter-spacing: 2px;
}

.video-img .desc-info {
  display: -webkit-flex;
  display: flex;
  margin-top: 5px;
}
.video-img .desc-info text {
  flex: 1;
  font-size:14px;
  color:#fff;
  line-height:14px;
  text-align:left;
}
