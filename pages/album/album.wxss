.template {
   
  height: 100%;
  padding: 14px 0 14px 15px;
  box-sizing: border-box;
  overflow: hidden;
}
.temp-scroll {
  height: 100%;
}
.temp-contain {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.template .temp-item {
  margin-bottom: 15px;
  width: 90px;
  height: 94px;
  border: none;
  font-size: 0;
}
.template .temp-item .item-img {
  position: relative;
  margin-bottom: 10px;
  height: 70px;
}
.template .temp-item .item-img .image {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.template .temp-item .item-name {
  display: block;
  line-height: 14px;
  font-size: 14px;
  color: #333;
  letter-spacing: 1;
  text-align: center;
}
.template .radio-icon {
  position: absolute;
  top: 4px;
  right: 0;
  font-size: 14px;
}

.edit {
  position: relative;
  height: 100%;
}
.edit .edits {
  position: relative;
  /* height: 45px; */
}
.hrline {
  position: absolute;
  width: 100%;
  border-top: 1px solid #b9b9b9;
}
.edit .edits .edit-name {
  /* line-height:16px; */
  display: inline-block;
  padding-left: 15px;
  line-height: 45px;
  font-size: 16px;
  color: #333;
  font-weight: bold;
  vertical-align: top;
  letter-spacing: 1px;
}
.edit .edits .make-person {
  display: inline-block;
  margin-top: 8px;
  height: 100%;
  line-height: 100%;
  font-size: 14px;
  font-weight: normal;
}
.edit .edits .tip {
  position: absolute;
  right: 8px;
  display: inline-block;
  height: 45px;
  line-height: 45px;
  color:#999;
  vertical-align: top;
  font-size:12px;
}
.edit .edits .album-desc {
  display: block;
  padding: 5px;
  width: 84%;
  margin: 0 8% 0;
  font-size: 14px;
  line-height: 18px;
  font-weight: normal;
  box-sizing: border-box;
}
.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btn-area .publish {
  position: relative;
  margin: 0 30px 10px;
  height: 40px;
  line-height: 40px;
  background-color: #f40009;
  color: #fff;
  font-weight: bold;
  border-radius: 10px;
}

.music {
  position: relative;
  padding-left: 15px;
  height: calc(100% - 77px);
  box-sizing: border-box;
  overflow: hidden;
}
.music-scroll {
