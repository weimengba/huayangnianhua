.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.my-pic-list {
  position: relative;
  padding: 8px 10px 15px;
  height: 253px;
  box-sizing: border-box;
}
.album {
  flex: 1;
  position: relative;
  width: 100%;
  font-size: 0;
  box-sizing: border-box;
  overflow: hidden;
}
.album .title {
  display: inline-block;
  padding-left: 15px;
  line-height:16px;
  font-size:16px;
  color:#333;
  font-weight: bold;
}
.album .album-con {
  display: flex;
  position: relative;
  margin-top: 15px;
  height: calc(100% - 31px);
  /* padding: 14px 15px; */
  border-top: 1px solid #b9b9b9;
  box-sizing: border-box;
}
.album .album-con .album-btns {
  flex: 0 0 46px;
  width: 46px;
  padding: 14px 15px 0 0;
}
.album .album-con .btn-item {
  display: inline-block;
  margin: 0 0 30px 2px;
  padding: 14px 0;
  width:44px;
  height:44px;
  line-height: 16px;
  color:#333;
  font-size:14px;
  background:#fff;
  box-shadow:0 2px 4px 0 rgba(0,0,0,0.50);
  letter-spacing: 1;
  font-weight: bold;
  border-radius:100%;
}
.album .album-con .btn-active {
  color: #f40009 !important;
}
.album .album-con .btn-item:first-child {
  margin-top: 20px;
}
.album .album-con .album-left {
  flex: 1;
}
