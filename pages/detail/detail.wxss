.swiper-wrap {
  height: 100%;
  background-color: #000;
}


.swiper-img {
  width: 100%;
}

.swiper-text {
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 50;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.swiper-text .title-wrap {
  width: 100%;
  padding: 15px 0 70px;
  text-align: center;
  color: #fff;
  font-size: 20px;
  background-image:linear-gradient(-1deg, rgba(0,0,0,0.00) 0%, rgba(0, 0, 0, .8) 100%);
}

.swiper-text .text-wrap {
  width: 100%;
  padding: 20px 0 120px;
  /* background-color: rgba(0, 0, 0, .3); */
  text-align: center;
  color: #f00;
  font-size: 22px;
  text-shadow:#fff 1px 0 0, #fff 0 1px 0, #fff -1px 0 0, #fff 0 -1px 0;
  font-weight: 600;
}

.swiper-text .text {
  display: block;
  letter-spacing: 1px;
  line-height: 1.5;
  padding: 0 15px;
}

.btn-group {
  width: 240px;
  height: 48px;
  background-color: rgba(0, 0, 0, .5);
  display: flex;
  align-items: center;
  border-radius: 48px;
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 199;
}

.btn {
  width: 50%;
  font-size: 20px;
  color: #fff;
  text-align: center;
  line-height: 1;
  background-color: transparent;
}

.btn::after {
  border: none;
}

.btn + .btn {
  border-left: 2px solid #fff;
}

