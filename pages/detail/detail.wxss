.con2 .comment-wrap .common-list .common-area .common-time {
  margin: 8px auto;
  color: #999;
}
.con2 .comment-wrap .common-list .common-area .commen-con {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
